{% extends "SandboxMainBundle::skeleton.html.twig" %}

{% block content %}

<div xmlns:sioc="http://rdfs.org/sioc/ns#"
     xmlns:dc="http://purl.org/dc/elements/1.1/"
     xmlns:dcterms="http://purl.org/dc/terms/"
     xmlns:skos="http://www.w3.org/2004/02/skos/core#"

     typeof="sioc:Post"
     about="{{ page.path }}"
     class="articleContainer hero-unit">

    <div class="hiddenfields">
        <ul rel="skos:related">
            {% for subject in page.tags %}
            <li class="label" about="{{ subject|replace({'<': '', '>': ''}) }}">
                <span property="rdfs:label">{{ subject|trim('<urn:tag:')|trim('>') }}</span>
            </li>
            {% endfor %}
        </ul>
    </div>
    <h1 id="main_title" property="dcterms:title">{{ page.title|raw }}</h1>
    <div property="sioc:content">
        {{ page.content|raw }}
        <div class="clearfix"></div>
    </div>
</div>

<hr/>

<div class="row">
{{ sonata_block_render({
    'name': 'additionalInfoBlock'
}) }}
</div>

<hr/>

{{ parent() }}
{% endblock %}

